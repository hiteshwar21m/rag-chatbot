# ========================================
# API KEYS
# ========================================
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ========================================
# LLM CONFIGURATION
# ========================================
LLM_MODEL=google/gemini-2.0-flash-lite-001
LLM_TEMPERATURE=0.3
LLM_TIMEOUT=30

# ========================================
# EMBEDDING MODELS
# ========================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# ========================================
# WEAVIATE CONFIGURATION
# ========================================
WEAVIATE_HOST=localhost
WEAVIATE_HTTP_PORT=8080
WEAVIATE_GRPC_PORT=50051

# ========================================
# RETRIEVAL CONFIGURATION
# ========================================
# How many documents to retrieve from summary search
TOP_K_SUMMARIES=10

# How many chunks to retrieve from direct search
TOP_K_CHUNKS_DIRECT=20

# Final number of chunks to return
TOP_K_FINAL=5

# Maximum chunks per document in final results
MAX_CHUNKS_PER_DOC=2

# Bonus score for chunks from summary-based search
DOC_BONUS_SCORE=0.1

# ========================================
# PROCESSING CONFIGURATION
# ========================================
# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=256

# Batch size for summarization
SUMMARY_BATCH_SIZE=32

# ========================================
# PATHS
# ========================================
CHUNKS_FILE=data/processed/chunks_final.jsonl
EMBEDDINGS_FILE=data/processed/chunks_with_embeddings.jsonl
QUERY_LOG_FILE=logs/query_log.jsonl

SUMMARIES_OUTPUT_FILE=data/processed/chunks_with_summaries.jsonl
SUMMARIZATION_ERROR_LOG=logs/summarization_errors.jsonl

PDF_MARKDOWN_DIR=data/extracted/pdf_markdown
WEBPAGE_TEXT_DIR=data/extracted/webpage_text
CHUNKS_OUTPUT_FILE=data/processed/chunks_with_metadata.jsonl